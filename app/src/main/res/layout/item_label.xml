<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:background="@color/colorWhite"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <ImageView
        android:id="@+id/iv_bank_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_bank_nongye_nor" />

    <TextView
        android:id="@+id/iv_bank_name"
        android:layout_toRightOf="@+id/iv_bank_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="招商银行(2323)"
        android:layout_marginLeft="12dp"
        android:layout_centerVertical="true"
        android:textColor="@color/color_414141"
        android:textSize="15sp" />

    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_user_enter" />
</RelativeLayout>