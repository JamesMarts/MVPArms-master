<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:background="@color/colorWhite"
   android:padding="14dp"
    android:layout_height="wrap_content">
<ImageView
    android:id="@+id/iv_coin_sign"
    android:layout_width="wrap_content"
    android:src="@mipmap/ic_user_record"
    android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/iv_coin_sign"
        android:orientation="vertical"
        android:layout_marginLeft="14dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="银行卡提现"
            android:textColor="@color/color_414141"
            android:textSize="15sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申请时间：2019/05/16 12:00"
            android:textColor="@color/color_979797"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            />
    </LinearLayout>
   <LinearLayout
       android:layout_width="wrap_content"
       android:orientation="vertical"
       android:gravity="center_vertical|right"
       android:layout_centerVertical="true"

       android:layout_alignParentRight="true"
       android:layout_height="wrap_content">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:text="+60金币"
           android:textColor="@color/color_f04d22"
           android:textSize="17sp"
           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="提现成功!"
           android:layout_marginTop="7dp"
           android:textColor="@color/color_979797"
           android:textSize="12sp"
           />

   </LinearLayout>
</RelativeLayout>