<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f8f8f8"
    android:orientation="vertical">

    <include layout="@layout/include_title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="32dp"
        android:drawableTop="@mipmap/ic_launcher"
        android:drawablePadding="9dp"
        android:gravity="center_horizontal"
        android:text="App"
        android:textColor="@color/color_414141"
        android:textSize="15sp" />

    <RelativeLayout
        android:id="@+id/btn_setting_cache"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@color/colorWhite"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="清除缓存"
            android:textColor="@color/color_414141"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableRight="@mipmap/ic_user_enter"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"

            android:text="87.00M"
            android:textColor="@color/color_979797"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginTop="4dp"
        android:background="@color/colorWhite"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="自动浏览"
            android:textColor="@color/color_414141"
            android:textSize="15sp" />

        <Switch
            android:id="@+id/switch_setting_auto"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="20dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_setting_agreement"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginTop="4dp"
        android:background="@color/colorWhite"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="用户协议"
            android:textColor="@color/color_414141"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableRight="@mipmap/ic_user_enter"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"

            android:text=""
            android:textColor="@color/color_979797"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_setting_version"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginTop="4dp"
        android:background="@color/colorWhite"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="版本检查"
            android:textColor="@color/color_414141"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableRight="@mipmap/ic_user_enter"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"

            android:text="V1.1.0"
            android:textColor="@color/color_979797"
            android:textSize="15sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/btn_setting_logout"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginTop="24dp"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:text="退出账号"
        android:textColor="@color/color_f04d22"
        android:textSize="15sp" />
</LinearLayout>