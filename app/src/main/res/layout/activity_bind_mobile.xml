<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="绑定手机号"
                android:textColor="@color/color_414141"
                android:textSize="32sp" />

            <ImageView
               android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="30dp"
                android:paddingRight="33dp"
                android:src="@mipmap/ic_sign_close_nor" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:paddingBottom="5dp">

            <EditText
                android:id="@+id/edt_bind_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                android:gravity="bottom"
                android:hint="请输入您的手机号"
                android:includeFontPadding="false"
                android:inputType="phone"
                android:maxLength="11"
                android:text=""
                android:textSize="15sp" />

            <TextView
                android:id="@+id/btn_bind_code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="bottom"
                android:includeFontPadding="false"
                android:text="获取验证码"
                android:textColor="@color/color_CCCCCC"
                android:textSize="15sp" />
        </RelativeLayout>

        <View
            android:id="@+id/view_bind_phone"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_CCCCCC" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:includeFontPadding="false"
            android:text="手机格式错误"
            android:textColor="@color/color_f04d22"
            android:textSize="12sp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:paddingBottom="5dp">

            <EditText
                android:id="@+id/edt_bind_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                android:gravity="bottom"
                android:hint="请输入验证码"
                android:includeFontPadding="false"
                android:inputType="number"
                android:maxLength="6"
                android:text=""
                android:textSize="15sp" />

        </RelativeLayout>

        <View
            android:id="@+id/view_bind_code"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_CCCCCC" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:includeFontPadding="false"
            android:text="验证码输入有误"
            android:textColor="@color/color_f04d22"
            android:textSize="12sp"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/btn_bind"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="75dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/bg_edittext_line"
        android:enabled="false"
        android:gravity="center"
        android:text="进入"
        android:textColor="@color/colorWhite"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/btn_bind_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:drawableLeft="@mipmap/ic_sign_reture_nor"
        android:drawablePadding="2dp"
        android:gravity="center_vertical"
        android:text="返回登录"
        android:textColor="@color/color_A22217"
        android:textSize="12sp" />

</LinearLayout>