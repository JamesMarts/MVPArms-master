<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">

        <!-- 定义当button 处于pressed 状态时的形态。-->

        <shape>

            <solid android:color="@color/color_CCCCCC" />


            <corners android:radius="30dp" />


        </shape>

    </item>


    <item android:state_enabled="true">

        <!-- 定义当button获得focus时的形态-->
        <shape>
            <gradient android:angle="90" android:endColor="#ffef5c2f" android:startColor="#ff9f041b" android:type="linear" android:useLevel="true" />

            <corners android:radius="30dp" />
        </shape>
    </item>
</selector>